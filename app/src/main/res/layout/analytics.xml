<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_4">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/in_game_Screen">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pre_lobby_image"
            android:scaleType="centerCrop"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_overlay"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/margin_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.05"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/margin_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.95"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/margin_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.03"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/margin_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.97"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/header_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.12"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/analytics_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.13"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/analytics_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.15"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/box_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.85"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/vertical_divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.40"/>
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="@string/analytics_header"
                android:autoSizeTextType="uniform"
                android:textColor="@color/color_1"
                android:fontFamily="@font/merriweather_bold"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/margin_start"
                app:layout_constraintTop_toBottomOf="@id/margin_top"
                app:layout_constraintBottom_toTopOf="@id/header_bottom"/>

            <FrameLayout
                android:id="@+id/analytics_container"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@id/analytics_start"
                app:layout_constraintEnd_toStartOf="@id/vertical_divider"
                app:layout_constraintTop_toBottomOf="@id/analytics_top"
                app:layout_constraintBottom_toTopOf="@id/margin_bottom">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/breakdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/breakdown_header"
                        android:fontFamily="@font/nunito_bold"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />

                    <TextView
                        android:id="@+id/perfect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/analytics_perfect"
                        android:fontFamily="@font/nunito_extrabold"
                        android:gravity="start"
                        app:layout_constraintHorizontal_bias="0.3"
                        app:layout_constraintTop_toBottomOf="@id/breakdown"
                        app:layout_constraintBottom_toTopOf="@id/great"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/total_perfect_placeholder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        app:layout_constraintTop_toBottomOf="@id/breakdown"
                        app:layout_constraintBottom_toTopOf="@id/great"
                        app:layout_constraintStart_toEndOf="@id/perfect"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.1"/>

                    <TextView
                        android:id="@+id/great"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/analytics_great"
                        android:gravity="start"
                        android:fontFamily="@font/nunito_extrabold"
                        app:layout_constraintHorizontal_bias="0.3"
                        app:layout_constraintTop_toBottomOf="@id/perfect"
                        app:layout_constraintBottom_toTopOf="@id/good"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/total_great_placeholder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        app:layout_constraintTop_toBottomOf="@id/total_perfect_placeholder"
                        app:layout_constraintStart_toEndOf="@id/great"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/total_good_placeholder"
                        app:layout_constraintHorizontal_bias="0.1"/>

                    <TextView
                        android:id="@+id/good"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/analytics_good"
                        android:fontFamily="@font/nunito_extrabold"
                        app:layout_constraintHorizontal_bias="0.3"
                        app:layout_constraintTop_toBottomOf="@id/great"
                        app:layout_constraintBottom_toTopOf="@id/bad"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/total_good_placeholder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        app:layout_constraintTop_toBottomOf="@id/total_great_placeholder"
                        app:layout_constraintStart_toEndOf="@id/good"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/total_bad_placeholder"
                        app:layout_constraintHorizontal_bias="0.1"/>

                    <TextView
                        android:id="@+id/bad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/analytics_bad"
                        android:fontFamily="@font/nunito_extrabold"
                        app:layout_constraintHorizontal_bias="0.3"
                        app:layout_constraintTop_toBottomOf="@id/good"
                        app:layout_constraintBottom_toTopOf="@id/skipped"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/total_bad_placeholder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        app:layout_constraintTop_toBottomOf="@id/total_good_placeholder"
                        app:layout_constraintStart_toEndOf="@id/bad"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/total_skipped_placeholder"
                        app:layout_constraintHorizontal_bias="0.1"/>

                    <TextView
                        android:id="@+id/skipped"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/analytics_skip"
                        android:fontFamily="@font/nunito_extrabold"
                        app:layout_constraintHorizontal_bias="0.3"
                        app:layout_constraintTop_toBottomOf="@id/bad"
                        app:layout_constraintBottom_toTopOf="@id/reviewPoses"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/total_skipped_placeholder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        app:layout_constraintTop_toBottomOf="@id/total_bad_placeholder"
                        app:layout_constraintStart_toEndOf="@id/skipped"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/reviewPoses"
                        app:layout_constraintHorizontal_bias="0.1"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/reviewPoses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/review_poses"
                        app:backgroundTint="@color/color_2"
                        android:fontFamily="@font/merriweather_bold"
                        app:layout_constraintTop_toBottomOf="@id/skipped"
                        app:layout_constraintBottom_toTopOf="@id/hold_time"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:cornerRadius="5dp"/>

                    <TextView
                        android:id="@+id/hold_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_extrabold"
                        app:layout_constraintHorizontal_bias="0.3"
                        app:layout_constraintTop_toBottomOf="@id/reviewPoses"
                        app:layout_constraintBottom_toTopOf="@id/score_view_top"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="@string/hold_time"
                        />

                    <TextView
                        android:id="@+id/total_holdtime_placeholder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        app:layout_constraintTop_toBottomOf="@id/reviewPoses"
                        app:layout_constraintStart_toEndOf="@id/hold_time"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/total_score_container"
                        app:layout_constraintHorizontal_bias="0.1"/>


                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/score_view_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.85"/>

                    <FrameLayout
                        android:id="@+id/total_score_container"
                        android:layout_width="0dp"
                        android:layout_marginHorizontal="20sp"
                        app:layout_constraintTop_toBottomOf="@id/score_view_top"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_height="0dp"
                        android:background="@drawable/dialog_bg_white">
                        
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5sp">
                            
                            <TextView
                                android:id="@+id/total_score_header"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/total_score"
                                android:fontFamily="@font/nunito_semibold"/>

                            <TextView
                                android:id="@+id/total_score_placeholder"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0000000"
                                android:gravity="center_horizontal"
                                android:layout_below="@id/total_score_header"/>
                        </RelativeLayout>
                    </FrameLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/dialog_bg_white"
                app:layout_constraintStart_toEndOf="@id/vertical_divider"
                app:layout_constraintEnd_toEndOf="@id/box_end"
                app:layout_constraintTop_toBottomOf="@id/analytics_top"
                app:layout_constraintBottom_toTopOf="@id/margin_bottom">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/divider_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.495"/>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/divider_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.515"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toBottomOf="@id/divider_top"
                        app:layout_constraintBottom_toTopOf="@id/divider_bottom"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:background="@color/color_3"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>


            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restart"
                android:fontFamily="@font/merriweather_bold"
                android:textColor="@color/color_4"
                app:backgroundTint="@color/color_2"
                app:layout_constraintBottom_toTopOf="@id/margin_bottom"
                app:layout_constraintStart_toEndOf="@id/margin_start"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:fontFamily="@font/merriweather_bold"
                android:textColor="@color/color_4"
                app:backgroundTint="@color/color_1"
                app:layout_constraintBottom_toTopOf="@id/margin_bottom"
                app:layout_constraintEnd_toStartOf="@id/margin_end"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</LinearLayout>