<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".First_Routine">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_4">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/yoga_routine_1"
                android:scaleType="centerCrop"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_overlay"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/margin_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.05"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/margin_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.93"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/margin_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.03"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/margin_icon_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.1"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/margin_top_pictures"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.23"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/margin_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.97"/>

                <ImageButton
                    android:id="@+id/back_button"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/back_button_dark"
                    android:scaleType="centerInside"
                    app:layout_constraintStart_toEndOf="@id/margin_start"
                    app:layout_constraintTop_toBottomOf="@id/margin_top"
                    app:layout_constraintBottom_toTopOf="@id/margin_icon_bottom"
                    app:layout_constraintDimensionRatio="1:1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:textAlignment="textStart"
                    android:text="string/back_to_menu"
                    android:autoSizeTextType="uniform"
                    android:layout_marginHorizontal="10sp"
                    android:textColor="@color/color_2"
                    android:fontFamily="@font/nunito_extrabold"
                    app:layout_constraintStart_toEndOf="@id/back_button"
                    app:layout_constraintTop_toBottomOf="@id/margin_top"
                    app:layout_constraintBottom_toTopOf="@id/margin_icon_bottom"
                    app:layout_constraintEnd_toStartOf="@id/margin_end"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@id/margin_bottom"
                    app:layout_constraintTop_toBottomOf="@id/margin_top_pictures"
                    app:layout_constraintStart_toEndOf="@id/margin_start"
                    app:layout_constraintEnd_toStartOf="@id/margin_end">

                    <ImageButton
                        android:id="@+id/session_1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@android:color/transparent"
                        android:scaleType="centerInside"
                        android:src="@drawable/first_session"
                        android:layout_marginHorizontal="15sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="H,1:2"
                        app:layout_constraintEnd_toStartOf="@+id/session_2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/routine_next"
                        app:layout_constraintStart_toEndOf="@id/session_1"
                        app:layout_constraintEnd_toStartOf="@id/session_2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />

                    <ImageButton
                        android:id="@+id/session_2"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginHorizontal="15sp"
                        android:background="@android:color/transparent"
                        android:scaleType="centerInside"
                        android:src="@drawable/second_session"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="H,1:2"
                        app:layout_constraintEnd_toStartOf="@+id/session_3"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/session_1"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/routine_next"
                        app:layout_constraintStart_toEndOf="@id/session_2"
                        app:layout_constraintEnd_toStartOf="@id/session_3"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />

                    <ImageButton
                        android:id="@+id/session_3"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginHorizontal="15sp"
                        android:background="@android:color/transparent"
                        android:scaleType="centerInside"
                        android:src="@drawable/third_session"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="H,1:2"
                        app:layout_constraintEnd_toStartOf="@+id/session_4"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/session_2"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/routine_next"
                        app:layout_constraintStart_toEndOf="@id/session_3"
                        app:layout_constraintEnd_toStartOf="@id/session_4"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />

                    <ImageButton
                        android:id="@+id/session_4"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginHorizontal="15sp"
                        android:background="@android:color/transparent"
                        android:scaleType="centerInside"
                        android:src="@drawable/fourth_session"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="H,1:2"
                        app:layout_constraintEnd_toStartOf="@+id/session_5"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/session_3"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/routine_next"
                        app:layout_constraintStart_toEndOf="@id/session_4"
                        app:layout_constraintEnd_toStartOf="@id/session_5"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />


                    <ImageButton
                        android:id="@+id/session_5"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginHorizontal="15sp"
                        android:background="@android:color/transparent"
                        android:scaleType="centerInside"
                        android:src="@drawable/fifth_session"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="H,1:2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/session_4"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>
    </LinearLayout>

</FrameLayout>