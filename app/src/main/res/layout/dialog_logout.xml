<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:theme="@style/full_screen_dialog">

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/dialog_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.55"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/button_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.58"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/dialog_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/button_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.35"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/button_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.65"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/color_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialog_top"
            app:layout_constraintBottom_toTopOf="@id/dialog_bottom">

            <TextView
                android:id="@+id/logout_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/logout_header"
                android:textColor="@color/color_4"
                android:fontFamily="@font/merriweather_bold"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/logout_desc"
                android:fontFamily="@font/nunito_bold"
                android:textColor="@color/color_4"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logout_cancel"
            android:textColor="@color/color_1"
            android:fontFamily="@font/merriweather_bold"
            app:cornerRadius="20dp"
            app:backgroundTint="@color/color_4"
            app:layout_constraintStart_toEndOf="@id/button_start"
            app:layout_constraintTop_toBottomOf="@id/button_top"
            app:layout_constraintHorizontal_bias="0.0"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logout_confirm"
            android:textColor="@color/color_1"
            android:fontFamily="@font/merriweather_bold"
            app:cornerRadius="20dp"
            app:backgroundTint="@color/color_4"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintTop_toBottomOf="@id/button_top"
            app:layout_constraintEnd_toStartOf="@id/button_end"/>


    </androidx.constraintlayout.widget.ConstraintLayout>




</FrameLayout>