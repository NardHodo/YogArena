<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/profile_view">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/margin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/margin_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.95"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/margin_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.03"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/margin_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.97"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/margin_start_inner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/margin_end_inner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.33"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@id/margin_start"
            app:layout_constraintEnd_toStartOf="@id/margin_end"
            app:layout_constraintTop_toBottomOf="@id/margin_top"
            app:layout_constraintBottom_toTopOf="@id/divider">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:padding="15sp"
                android:src="@drawable/profile_icon"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/player_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/player_name"
                    android:textColor="@color/color_4"
                    android:textSize="30sp"
                    android:fontFamily="@font/nunito_extrabold" />

                <TextView
                    android:id="@+id/current_ranking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Ranking:N/A"
                    android:textColor="@color/color_4"
                    android:textSize="20sp"
                    android:fontFamily="@font/nunito_medium"
                    android:layout_below="@id/player_name"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/accuracy_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_4"
                    android:fontFamily="@font/nunito_semibold"
                    android:textSize="15sp"
                    android:text="Accuracy Rating:"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_4"
                    android:text="0%"
                    android:textSize="15sp"
                    android:fontFamily="@font/nunito_bold"
                    android:layout_below="@id/accuracy_header"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/variety_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_4"
                    android:text="Variety Score"
                    android:fontFamily="@font/nunito_semibold"
                    android:textSize="15sp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_4"
                    android:text="0"
                    android:textSize="15sp"
                    android:fontFamily="@font/nunito_bold"
                    android:layout_below="@id/variety_header"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/overall_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_4"
                    android:fontFamily="@font/nunito_semibold"
                    android:textSize="15sp"
                    android:text="Overall Score"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_4"
                    android:text="0"
                    android:textSize="15sp"
                    android:fontFamily="@font/nunito_bold"
                    android:layout_below="@id/overall_header"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="20sp"
            app:layout_constraintStart_toEndOf="@id/margin_start"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintEnd_toStartOf="@id/margin_end"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/leaderboard_1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/leaderboard_standing"
                    android:orientation="horizontal"
                    android:padding="10sp"
                    android:layout_marginVertical="10sp"
                    app:layout_constraintBottom_toTopOf="@+id/leaderboard_2"
                    app:layout_constraintDimensionRatio="H,4:0.2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/nunito_bold"
                        android:text="#1"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="10sp"
                        android:autoSizeMaxTextSize="20sp"
                        android:autoSizeStepGranularity="1sp"
                        android:textColor="@color/color_1"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/leaderboard_2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/leaderboard_standing"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10sp"
                    android:layout_marginVertical="10sp"
                    app:layout_constraintBottom_toTopOf="@+id/leaderboard_3"
                    app:layout_constraintDimensionRatio="H,4:0.2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/leaderboard_1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_bold"
                        android:text="#2"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="10sp"
                        android:autoSizeMaxTextSize="20sp"
                        android:autoSizeStepGranularity="1sp"
                        android:textColor="@color/color_1"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/leaderboard_3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/leaderboard_standing"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10sp"
                    android:layout_marginVertical="10sp"
                    app:layout_constraintBottom_toTopOf="@+id/leaderboard_4"
                    app:layout_constraintDimensionRatio="H,4:0.2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/leaderboard_2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_bold"
                        android:text="#3"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="10sp"
                        android:autoSizeMaxTextSize="20sp"
                        android:autoSizeStepGranularity="1sp"
                        android:textColor="@color/color_1"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/leaderboard_4"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/leaderboard_standing"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10sp"
                    android:layout_marginVertical="10sp"
                    app:layout_constraintBottom_toTopOf="@+id/leaderboard_5"
                    app:layout_constraintDimensionRatio="H,4:0.2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/leaderboard_3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_bold"
                        android:text="#4"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="10sp"
                        android:autoSizeMaxTextSize="20sp"
                        android:autoSizeStepGranularity="1sp"
                        android:textColor="@color/color_1"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/leaderboard_5"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/leaderboard_standing"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10sp"
                    android:layout_marginVertical="10sp"
                    app:layout_constraintBottom_toTopOf="@+id/leaderboard_6"
                    app:layout_constraintDimensionRatio="H,4:0.2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/leaderboard_4">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_bold"
                        android:text="#5"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="10sp"
                        android:autoSizeMaxTextSize="20sp"
                        android:autoSizeStepGranularity="1sp"
                        android:textColor="@color/color_1"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/leaderboard_6"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/leaderboard_standing"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10sp"
                    android:layout_marginVertical="10sp"
                    app:layout_constraintBottom_toTopOf="@+id/leaderboard_7"
                    app:layout_constraintDimensionRatio="H,4:0.2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/leaderboard_5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_bold"
                        android:text="#6"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="10sp"
                        android:autoSizeMaxTextSize="20sp"
                        android:autoSizeStepGranularity="1sp"
                        android:textColor="@color/color_1"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/leaderboard_7"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/leaderboard_standing"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10sp"
                    android:layout_marginVertical="10sp"
                    app:layout_constraintBottom_toTopOf="@+id/leaderboard_8"
                    app:layout_constraintDimensionRatio="H,4:0.2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/leaderboard_6">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_bold"
                        android:text="#7"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="10sp"
                        android:autoSizeMaxTextSize="20sp"
                        android:autoSizeStepGranularity="1sp"
                        android:textColor="@color/color_1"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/leaderboard_8"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/leaderboard_standing"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10sp"
                    android:layout_marginVertical="10sp"
                    app:layout_constraintBottom_toTopOf="@+id/leaderboard_9"
                    app:layout_constraintDimensionRatio="H,4:0.2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/leaderboard_7">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_bold"
                        android:text="#8"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="10sp"
                        android:autoSizeMaxTextSize="20sp"
                        android:autoSizeStepGranularity="1sp"
                        android:textColor="@color/color_1"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/leaderboard_9"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/leaderboard_standing"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10sp"
                    android:layout_marginVertical="10sp"
                    app:layout_constraintBottom_toTopOf="@+id/leaderboard_10"
                    app:layout_constraintDimensionRatio="H,4:0.2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/leaderboard_8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_bold"
                        android:text="#9"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="10sp"
                        android:autoSizeMaxTextSize="20sp"
                        android:autoSizeStepGranularity="1sp"
                        android:textColor="@color/color_1"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/leaderboard_10"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/leaderboard_standing"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10sp"
                    android:layout_marginVertical="10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="H,4:0.2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/leaderboard_9">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_bold"
                        android:text="#10"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="10sp"
                        android:autoSizeMaxTextSize="20sp"
                        android:autoSizeStepGranularity="1sp"
                        android:textColor="@color/color_1"/>
                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>




</LinearLayout>