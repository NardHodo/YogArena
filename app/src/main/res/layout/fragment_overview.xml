<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/profile_view">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/margin_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".05"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".3"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/divider_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".31"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/margin_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".95"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/margin_top"
        app:layout_constraintBottom_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/inner_margin_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.03"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/inner_margin_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.45"/>
        
        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/profile_icon"
            android:padding="10sp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/inner_margin_start"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@id/profile_icon"
            android:gravity="center_vertical"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/inner_margin_end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/overview_player_name"
                android:textColor="@color/color_4"
                android:fontFamily="@font/nunito_bold"
                android:textSize="15sp"/>
            
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="15sp"
                android:layout_marginHorizontal="0sp"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/line_seperator"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintBottom_toTopOf="@id/divider_bottom"
        android:layout_marginHorizontal="12sp"/>
    
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/divider_bottom"
        app:layout_constraintBottom_toTopOf="@id/margin_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="20sp">
            
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/vertical_divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/scrollable_margin_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.02"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/scrollable_margin_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".98"/>

            <RelativeLayout
                android:id="@+id/playtime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/scrollable_margin_start"
                app:layout_constraintEnd_toStartOf="@id/vertical_divider"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/total_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_semibold"
                    android:text="@string/total_playtime"
                    android:textColor="@color/color_4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/total_hours"
                    android:fontFamily="@font/nunito_black"
                    android:text="00:00:00"
                    android:textColor="@color/color_4" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/scrollable_half_bottom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/scrollable_margin_start"
                app:layout_constraintEnd_toStartOf="@id/vertical_divider"
                app:layout_constraintTop_toBottomOf="@id/playtime">

                <TextView
                    android:id="@+id/daily_streak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_semibold"
                    android:text="@string/longest_daily_streak"
                    android:textColor="@color/color_4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/daily_streak"
                    android:fontFamily="@font/nunito_black"
                    android:text="1"
                    android:textColor="@color/color_4" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/playTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/vertical_divider"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/yoga_sessions_played"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_semibold"
                    android:text="@string/sessions_played"
                    android:textColor="@color/color_4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/yoga_sessions_played"
                    android:fontFamily="@font/nunito_black"
                    android:text="0"
                    android:textColor="@color/color_4" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/vertical_divider"
                app:layout_constraintTop_toBottomOf="@id/playTotal">

                <TextView
                    android:id="@+id/daily_goals_finished"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_semibold"
                    android:text="@string/daily_goals_finished"
                    android:textColor="@color/color_4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_black"
                    android:text="0"
                    android:layout_below="@id/daily_goals_finished"
                    android:textColor="@color/color_4" />
            </RelativeLayout>
            <TextView
                android:id="@+id/most_played_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_extrabold"
                android:textColor="@color/color_4"
                app:layout_constraintStart_toEndOf="@id/scrollable_margin_start"
                app:layout_constraintEnd_toEndOf="@id/scrollable_margin_end"
                app:layout_constraintBottom_toTopOf="@id/picutre_container"
                app:layout_constraintTop_toBottomOf="@id/scrollable_half_bottom"
                android:text="Most Played YogArena Routines"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/picutre_container"
                android:layout_width="0dp"
                android:layout_height="250dp"
                app:layout_constraintTop_toBottomOf="@id/most_played_header"
                app:layout_constraintStart_toEndOf="@id/scrollable_margin_start"
                app:layout_constraintEnd_toStartOf="@id/scrollable_margin_end">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/picture_margin_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.45"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/picture_margin_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.55" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/sample_pic"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/picture_margin_right"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_pic"
                    app:layout_constraintStart_toEndOf="@id/picture_margin_left"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>